<form action="/prehistoric_creatures/<%= animalId %>/?_method=PUT>" method="POST"> 
    <!-- METHOD is the HTTP VERB and ACTION is telling what route to send it to.-->
    <!-- The Key gets sent as the name attr of the input tag -->
    <!-- We need to coordinate the HTML tags with how it will be sent as an OBJ -->
    <label for="animalName">Name</label>
    <input type="text" id="animalType" name="name" value="<%= animal.type %>">
    <label for="animalType">Type</label>
    <input type="text" id="animalUrl" name="type" value="<%= animal.img_url %>">

    <input type="submit" value="Update animal">
</form>